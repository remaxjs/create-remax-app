{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": ["ES2019"],
    "target": "ES2019",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib"
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["src/__tests__"]
}
